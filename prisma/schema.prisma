generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      String   @default("admin")
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders         Order[]
  reviews        Review[]
  accounts       Account[]
  sessions       Session[]
  authenticators Authenticator[]
  sellerMemberships SellerUser[]
}

model Seller {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  status       String   @default("ACTIVE")
  description  String?
  supportEmail String?
  website      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  products Product[]
  members  SellerUser[]
}

model SellerUser {
  id        String   @id @default(cuid())
  role      String   @default("owner")
  createdAt DateTime @default(now())

  seller   Seller @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  sellerId String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String

  @@unique([sellerId, userId])
}

model Product {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique
  description  String?
  price        Int
  currency     String   @default("USD")
  thumbnailUrl String?
  status       String   @default("PUBLISHED")
  sellerId     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  seller         Seller   @relation(fields: [sellerId], references: [id], onDelete: Cascade)
  variants        Variant[]
  reviews         Review[]
  linkTrackers    LinkTracker[]
  orderItems      OrderItem[]
  addToCartEvents AddToCartEvent[]
  trackingEvents  TrackingEvent[]

  @@index([status])
  @@index([sellerId])
}

model Variant {
  id        String   @id @default(cuid())
  name      String
  sku       String?  @unique
  price     Int
  stock     Int      @default(0)
  imageUrl  String?
  size      String?
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  orderItems      OrderItem[]
  linkTrackers    LinkTracker[]
  addToCartEvents AddToCartEvent[]
}

model Review {
  id          String   @id @default(cuid())
  rating      Int
  title       String?
  body        String
  status      String   @default("PENDING")
  authorName  String
  authorEmail String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@index([status])
}

model Order {
  id          String   @id @default(cuid())
  orderNumber String   @unique
  status      String   @default("PENDING")
  total       Int
  currency    String   @default("USD")
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  items OrderItem[]
}

model OrderItem {
  id        String   @id @default(cuid())
  quantity  Int      @default(1)
  unitPrice Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId String

  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  productId String?

  variant   Variant? @relation(fields: [variantId], references: [id], onDelete: SetNull)
  variantId String?
}

model LinkTracker {
  id         String   @id @default(cuid())
  code       String   @unique
  label      String
  url        String
  medium     String?
  target     String   @default("PDP")
  redirectTo String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  variant   Variant? @relation(fields: [variantId], references: [id], onDelete: SetNull)
  variantId String?

  hits            Hit[]
  addToCartEvents AddToCartEvent[]
  trackingEvents  TrackingEvent[]

  @@unique([productId, url])
  @@index([productId])
}

model Hit {
  id        String   @id @default(cuid())
  ipAddress String?
  userAgent String?
  referer   String?
  createdAt DateTime @default(now())

  tracker   LinkTracker @relation(fields: [trackerId], references: [id], onDelete: Cascade)
  trackerId String

  @@index([trackerId])
}

model AddToCartEvent {
  id        String   @id @default(cuid())
  productId String
  variantId String?
  trackerId String?
  createdAt DateTime @default(now())

  product Product      @relation(fields: [productId], references: [id], onDelete: Cascade)
  variant Variant?     @relation(fields: [variantId], references: [id], onDelete: SetNull)
  tracker LinkTracker? @relation(fields: [trackerId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([productId])
}

model TrackingEvent {
  id        String   @id @default(cuid())
  event     String
  path      String
  productId String?
  linkId    String?
  ref       String?
  userAgent String?
  createdAt DateTime @default(now())

  product Product?     @relation(fields: [productId], references: [id], onDelete: SetNull)
  link    LinkTracker? @relation(fields: [linkId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([event])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Authenticator {
  id         String   @id @default(cuid())
  userId     String
  provider   String
  identifier String
  credential String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, identifier, userId])
}
